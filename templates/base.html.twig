<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Bernard L'Herm'eat{% endblock %}</title>
    <link href='https://fonts.googleapis.com/css?family=Lobster+Two:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,300,700' rel='stylesheet' type='text/css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!--MOBILE DEVICE-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>

    <!--CSS-->
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css"/>
        <link rel="stylesheet" type="text/css" href="/css/style.css"/>
        <link rel="stylesheet" type="text/css" href="/css/font-awesome.css"/>
        <link rel="stylesheet" type="text/css" href="/css/animate.css">
        <link rel="stylesheet" type="text/css" href="/css/responsive.css"/>
    {% endblock %}

    <!--JS-->
    {% block javascripts %}
        <script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
        <script type="text/javascript" src="/js/modernizr.js"></script>
        <script src="/js/scripts.js"></script>
        <script src="/js/waypoints.min.js"></script>
    {% endblock %}

    <style>#page-content {
            flex: 1 0 auto;
        }

        #sticky_footer {
            flex-shrink: 0;
        }
    </style>
</head>

<body>
<!-- Paste this code after body tag -->
<div class="se-pre-con"></div>
<!-- Ends -->

<div id="page-content">

<header>
    <section class="saction1">
        <div class="container">
            <div class="row">


                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h1> <a href="{{ path('home') }}"><img src="/images/logo1.png" width="200" alt="" /></a> </h1>
                    <div class="menu">
                        <div class="mobile-nav-container"> </div>
                        <div class="mobile-nav-btn"><img class="nav-open" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/6214/nav-open.png" alt="Nav Button Open" /> <img class="nav-close" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/6214/nav-close.png" alt="Nav Button Close" /> </div>

                        <nav>
                            <ul>
                                <li><a href="{{ path('home') }}">Accueil</a></li>
                                <li><a class="nav-link {% if current_page is defined and current_page == 'restaurants' %}active {% endif %}" href="{{ path('restaurant.index') }}">Nos Restaurants </a></li>
                            </ul>
                        </nav>
                    </div>

                    <div class="login">
                        <ul>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin.restaurant.index') }}" class="nav-link">Gestion du site</a>
                            {% endif %}
                            {% if is_granted('IS_ANONYMOUS') %}
                                <a href="{{ path('app_register') }}" class="nav-link">Register</a>
                                <a href="{{ path('login') }}" class="nav-link">Login</a>
                            {% endif %}
                            {% if app.user %}
                                <a href="{{ path('command_index') }}" class="nav-link">Ma commande</a>
                                <a href="{{ path('logout') }}" class="nav-link">Se d√©connecter</a>
                            {% endif %}



                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>
</header>


{% block body %}{% endblock %}
</div>
<footer class="saction9" id="sticky_footer" style="margin-top: fill">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="email">&copy; All right reserved 2021  /  Bernard l'Herm'eat </div>
            </div>
        </div>
    </div>
</footer>

<script type="text/javascript" src="/js/sidemenu.js"></script>
</body>
</html>
